            }

            // Load user and update email
            var dbUser = await context.Users.FirstOrDefaultAsync(u => u.Id == UserId.Create(_currentUserId));
            if (dbUser == null)
            {
                _emailPreferencesError = "User not found";
                _isSavingEmailPreferences = false;
