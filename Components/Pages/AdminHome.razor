@page "/admin"
@using Microsoft.AspNetCore.Components

<PageTitle>Admin</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-8">
    <MudPaper Elevation="0" Class="d-flex justify-center align-center" Style="min-height: 80vh;">
        <div style="text-align: center;">
            <MudText Typo="Typo.h3" Class="mb-4">Welcome to Admin</MudText>
            
            <div style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; max-width: 800px; margin: 0 auto;">
                <iframe 
                    style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"
                    src="https://www.youtube.com/embed/j2yCfIHFRhI?autoplay=1" 
                    title="YouTube video player" 
                    frameborder="0" 
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                    allowfullscreen>
                </iframe>
            </div>
            
            <MudText Typo="Typo.body1" Class="mt-4">
                <MudLink Href="/admin/information" Color="Color.Primary">Go to Admin Information Management</MudLink>
            </MudText>
        </div>
    </MudPaper>
</MudContainer>

